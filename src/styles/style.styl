html
body
    max-width: 100%
    overflow-x: hidden

body
    background-color: #101115
    cursor: default

.buynow
    color: #fff
    width: 100%
    height: 100vh
    padding: 0 40px
    position: fixed
    z-index: 50
    text-align: center
    top: 0
    transform: translateY(100%)
    transition: all 0.85s cubic-bezier(0.38, 0.52, 0.32, 1)
    opacity: 0

    .stage-buynow &
        opacity: 1
        transform: none
        transition: all 0.85s cubic-bezier(0.38, 0.52, 0.32, 1)

.table
    display: table
    width: 100%
    height: 100%

.cell
    display: table-cell
    vertical-align: middle
